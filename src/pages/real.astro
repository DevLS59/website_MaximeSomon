    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <a href="/real_sayonara" class="link-video">
            <video autoplay loop muted>
              <source src="./showreelsayonara .mp4" type="video/mp4" />
            </video>
          
          </a>
          <h3 class="title">BM & DBOUNCE- sayorana </h3>
        </div> 
              
        <div class="swiper-slide">
          <video autoplay loop muted>
            <source src="./Showreelgogo.mp4" type="video/mp4" />
          </video>
          <h3 class="title">BM & DBOUNCE - GOGOGO! s</h3>
        </div>
 
        <div class="swiper-slide">
          <video autoplay loop muted>
            <source src="./showreellapiste.mp4" type="video/mp4" />
          </video>
          <h3 class="title">BM & DBOUNCE - LA PISTE</h3>
        </div> 

        <div class="swiper-slide">
                <video autoplay loop muted>
                  <source src="./showreelcaptain.mp4" type="video/mp4" />
                  </video>
                  <h3 class="title">BM & DBOUNCE - CAPTAIN</h3>
